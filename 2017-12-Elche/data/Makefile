default:	all

# Rules

## .gpt -> .fig
%.fig:	%.gpt
	gnuplot $*.gpt

## .fig -> .svg
%.svg:	%.fig
	fig2dev -L pstex $*.fig > tmp.eps
	fig2dev -L pstex_t -f sf -p tmp.eps $< > tmp.tex
	latex << EOF \
\\documentclass[a3]{article} \
\\usepackage{epsfig} \
\\usepackage{amsmath} \
\\usepackage{amssymb} \
\\usepackage{color} \
\\usepackage{cancel} \
\\begin{document} \
\\pagestyle{empty} \
\\thispagestyle{empty} \
\\input{tmp} \
\\end{document} \
EOF
	mv article.dvi $*.dvi
	dvips $*.dvi -o $*.ps
	ps2eps --loose < $*.ps > $*.eps
	epstopdf $*.eps
	rm $*.ps
	rm tmp.eps
	rm $*.dvi
	rm $*.eps
	rm tmp.tex
	rm article.aux
	rm article.log
	pdf2svg $*.pdf $*.svg

## .tex -> .svg
%.svg:	%.tex
	pdflatex -jobname $*_ << EOF \
\\documentclass[a3]{article} \
\\usepackage[utf8]{inputenc} \
\\usepackage{amsmath} \
\\usepackage{amssymb} \
\\usepackage{color} \
\\usepackage{listings} \
\\usepackage[pdftex]{graphicx} \
\\usepackage[urlcolor=black,colorlinks]{hyperref} \
\\begin{document} \
\\sffamily \
\\def\\normalfont{\\sffamily} \
\\renewcommand{\\familydefault}{cmss} \
\\pagestyle{empty} \
\\thispagestyle{empty} \
\\resizebox{1.0\\textwidth}{!}{\\input{$*}} \
\\end{document} \
EOF
#       pdftops $*_.pdf $*.ps
#       ps2eps --loose < $*.ps > $*.eps
#       epstopdf $*.eps
	pdfcrop $*_.pdf $*.pdf
	rm $*_.pdf
	rm $*_.aux
	rm $*_.log
	pdf2svg $*.pdf $*.svg

%.png:	%.svg
	convert -density 100 $*.svg $*.png

# Original files
FIGs := $(wildcard *.fig)
TEXs := $(wildcard *.tex)
GPTs := $(wildcard *.gpt)

SVGs += $(FIGs:%.fig=%.svg)	# .svg files generated by .fig files
SVGs += $(TEXs:%.tex=%.svg)	# .svg files generated by .tex files
TMPs += $(SVGs)
TFIGs += $(GPTs:%.gpt=%.fig)	# .fig files generated by .gpt files
TMPs += $(TFIGs)
PNGs += $(SVGs:%.svg=%.png)
TMPs += $(PNGs)

all:	$(TMPs)

clean:
	rm -f $(TMPs)

info:
	@echo $(TMPs)

